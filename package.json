{
  "name": "current-bitcoin-price",
  "version": "1.0.2",
  "description": "Get current Bitcoin price in USD/EUR from CoinGecko, Binance & more. 1-line API.",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "keywords": [
    "bitcoin",
    "btc",
    "crypto",
    "price",
    "ticker",
    "coingecko",
    "binance"
  ],
  "homepage": "https://github.com/OriginalEveres/current-bitcoin-price#readme",
  "bugs": {
    "url": "https://github.com/OriginalEveres/current-bitcoin-price/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OriginalEveres/current-bitcoin-price.git"
  },
  "license": "MIT",
  "author": "Matthew Husak",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p .",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:integration": "RUN_INTEGRATION=true vitest --run --include src/price/**/CoinGeckoProvider.integration.test.ts",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md}'"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-vitest": "*",
    "prettier": "*",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
